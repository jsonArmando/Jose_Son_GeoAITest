# === APPLICATION SETTINGS ===
APP_NAME=Financial Reports Extractor
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-this-in-production

# === DATABASE CONFIGURATION ===
DATABASE_URL=postgresql+asyncpg://postgres:postgres123@localhost:5432/financial_reports
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# === REDIS CONFIGURATION ===
REDIS_URL=redis://:redis123@localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# === MINIO/S3 CONFIGURATION ===
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=financial-documents
MINIO_SECURE=false

# === MESSAGE BROKER ===
RABBITMQ_URL=amqp://rabbitmq:rabbitmq123@localhost:5672/
CELERY_BROKER_URL=redis://:redis123@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:redis123@localhost:6379/0

# === SELENIUM CONFIGURATION ===
SELENIUM_HUB_URL=http://localhost:4444/wd/hub
SELENIUM_IMPLICIT_WAIT=10
SELENIUM_PAGE_LOAD_TIMEOUT=30
SELENIUM_SCRIPT_TIMEOUT=30

# === AI MODELS CONFIGURATION ===
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000

HUGGINGFACE_API_KEY=your-huggingface-api-key-here
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium

# === SCRAPING CONFIGURATION ===
SCRAPING_DELAY_MIN=1
SCRAPING_DELAY_MAX=3
SCRAPING_RETRY_ATTEMPTS=3
SCRAPING_TIMEOUT=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# === FILE PROCESSING ===
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx
TEMP_FILE_RETENTION_HOURS=24
STORAGE_PATH=./storage

# === API CONFIGURATION ===
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
API_ACCESS_LOG=true

# === CORS SETTINGS ===
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "PATCH"]
CORS_HEADERS=["*"]

# === RATE LIMITING ===
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# === MONITORING ===
PROMETHEUS_METRICS_PATH=/metrics
METRICS_ENABLED=true
SENTRY_DSN=your-sentry-dsn-here
HEALTH_CHECK_PATH=/health

# === SECURITY ===
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12

# === EXTERNAL APIS ===
TOREX_GOLD_BASE_URL=https://torexgold.com/investors/financial-reports/
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10

# === VALIDATION ===
MINIMUM_CONFIDENCE_SCORE=0.7
VALIDATION_RETRIES=2
DATA_QUALITY_THRESHOLD=0.8

# === DEVELOPMENT TOOLS ===
ENABLE_PROFILER=false
ENABLE_DEBUG_TOOLBAR=false
MOCK_AI_RESPONSES=false
SKIP_SELENIUM_TESTS=false